<!doctype html>
<!-- esto es un comentario -->
<html>
    <head>
        <meta charset= "UTF-8"/>
        <title>Mi página</title>
        <!-- <link href='http://fonts.googleapis.com/css?family=Monda' rel='stylesheet' type='text/css'>
        -->
        <link href="imagenes/favicon.ico" rel="shortcut icon"/>
        <link href="css/normalize.css" rel="stylesheet" media="screen"/>
        <link href="css/estilos_all.css" rel="stylesheet" media="screen"/>
        <link href="css/estilos_lap.css" rel="stylesheet" media="screen and (min-width:600px)"/>
        <link href="css/estilos_moviles.css" rel="stylesheet" media="screen and (max-width:600px)"/>
    </head>
    <body>
        <!-- contenido de la página -->
        <div id="div_vacio"></div>
        <header>
            <nav>
                <ul id="menu">
                    <li>
                        <a href="/index">Inicio</a>
                    </li>
                    <li>
                        Productos
                    </li>
                    <li>
                        Blog
                    </li>
                    <li>
                       <a href="/contacto">Contacto</a>
                    </li>
                    <li>
                        Acerca
                    </li>
                </ul>
            </nav>
        </header>

        <!--OBSERVA LA DEFINICION DEL ATRIBUTO TYPE DE LOS INPUTS-->
        <section>
            <form action="/respuesta_contacto" method="post">
                <p>
                    <!--solicito el nombre-->
                    <label>Nombre</label>
                    <input type="text" name="nombre"/>
                </p>
                <p>
                    <!--solicito el email-->
                    <label>Email</label>
                    <input type="email" name="email"/>
                </p>
                <p>
                    <!--solicito la url-->
                    <label>Website:</label>
                    <input type="url" name="url"/>
                </p>
                <p>
                    <label>Edad:</label>
                    <input type="number" name="edad" min="12" max="90" step="1"/>

                </p>
                <p>
                    <label>Comentario:</label>
                    <input type="textarea" name="comentario"/>
                </p>
                <input value="Enviar" type="submit" />
            </form>
        </section>

        <footer>
            <div id="derechos">
                <p>
                    Mi página, derechos reservados
                </p>
                <div id="redes-sociales">
                    <img src="imagenes/facebook.png" />
                    <img src="imagenes/twitter.png"/>
                    <img src="imagenes/googleplus.png"/>
                    <img src="imagenes/youtube.png"/>
                </div>
            </div>
            <div id="suscribirse">
                <form action="/suscribirse" method="post">
                    <label for="email">Suscríbete:</label>
                    <input id="email" type="text" name="email"/>
                    <input value="enviar" type="submit">
                </form>
            </div>
        </footer>
    </body>
</html>
